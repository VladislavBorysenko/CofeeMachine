<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите напиток"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="38dp" />

        <ImageButton
            android:id="@+id/americano"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/americano" />

        <ImageButton
            android:id="@+id/capucchino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/cappuccino" />

        <ImageButton
            android:id="@+id/espresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/espresso" />

        <ImageButton
            android:id="@+id/espressoConPane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/espresso_con_panna" />

        <ImageButton
            android:id="@+id/espressomachiato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/espressomachiato" />

        <ImageButton
            android:id="@+id/latte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:onClick="onClick"
            app:srcCompat="@drawable/latte" />

    </LinearLayout>
    </ScrollView>
